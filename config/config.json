{
    "options": [
        {
            "help": {
                "action": "store_true",
                "args": [
                    "-h",
                    "--help"
                ],
                "info": "Show Help and exits.",
                "required": false,
                "show": true
            }
        },
        {
            "version": {
                "action": "store_true",
                "args": [
                    "-v",
                    "--version"
                ],
                "info": "Get application version.",
                "required": false,
                "show": true
            }
        },
        {
            "add_deps": {
                "action": "store_true",
                "args": [
                    "--add-deps"
                ],
                "info": "Add dependencies for export-rel.",
                "required": false,
                "show": true
            }
        },
        {
            "bump_version": {
                "action": "store_true",
                "args": [
                    "--bump-version"
                ],
                "info": "Send refined project 'selected version' to /$project_path/rel or path.",
                "nargs": 1,
                "params_required": [
                    "VERSION"
                ],
                "required": false,
                "show": true
            }
        },
        {
            "export_bin": {
                "action": "store_true",
                "args": [
                    "--export-bin"
                ],
                "info": "Send refined project 'current state' or 'selected version' to /data/bin and create symlink or send to path.",
                "required": false,
                "show": true
            }
        },
        {
            "export_rel": {
                "action": "store_true",
                "args": [
                    "--export-rel"
                ],
                "info": "Send refined project 'selected version' to /$project_path/rel or path.",
                "required": false,
                "show": true
            }
        },
        {
            "generate_db": {
                "action": "store_true",
                "args": [
                    "-g",
                    "--gen",
                    "--gd",
                    "--generate-db"
                ],
                "info": "list all folders in repository and generate the db.json.",
                "required": false,
                "show": true
            }
        },
        {
            "import_pkgs": {
                "action": "store_true",
                "args": [
                    "-i",
                    "--import"
                ],
                "info": "import packages in a git project with a folder gpkgs. Packages are identified with the following syntax uuid4,name,version,pkg_bound . Generally you just select the name, but you can also use the uuid4, and the version. To import a package you have to name the packages. if only name, latest version of the package is selected and package bound is going to be gpm. if name,version then version is a filter and several options are possible: major.minor.patch each element can be a number, the letter L for latest or the letter A for any . It allows advanced filters to display and select packages.",
                "required": false,
                "show": true,
                "nargs": [
                    1,
                    2
                ],
                "params_required": [
                    "PKG",
                    "..."
                ]
            }
        },
        {
            "ls_repo": {
                "action": "store_true",
                "args": [
                    "-l",
                    "--ls",
                    "--ls-repo"
                ],
                "info": "List all packages in the repo. You can add name(s) to filter by names.",
                "nargs": [
                    0
                ],
                "params_optional": [
                    "NAME",
                    "..."
                ],
                "required": false,
                "show": true
            }
        },
        {
            "no_symlink": {
                "action": "store_true",
                "args": [
                    "--no-symlink"
                ],
                "info": "Prevent symlink creation on --export-bin.",
                "required": false,
                "show": true
            }
        },
        {
            "path": {
                "action": "store_true",
                "args": [
                    "--path"
                ],
                "info": "Select path for export_bin or export_rel.",
                "nargs": 1,
                "params_required": [
                    "PATH"
                ],
                "required": false,
                "show": true
            }
        },
        {
            "path_src": {
                "action": "store_true",
                "args": [
                    "--path-src"
                ],
                "info": "Select source path for export_bin or export_rel. When this path is selected the application move to this directory before starting processing the command.",
                "nargs": 1,
                "params_required": [
                    "PATH"
                ],
                "required": false,
                "show": true
            }
        },
        {
            "release_version": {
                "action": "store_true",
                "args": [
                    "--rversion"
                ],
                "info": "Select 'release version' for export_bin or export_rel.",
                "nargs": 1,
                "params_required": [
                    "VERSION"
                ],
                "required": false,
                "show": true
            }
        },
        {
            "set_bump_deploy": {
                "action": "store_true",
                "args": [
                    "--set-bump-deploy"
                ],
                "info": "Generate bump_version.py and deploy.py files. It also repair symlinks if they are broken.",
                "required": false,
                "show": true
            }
        },
        {
            "steps": {
                "action": "store_true",
                "args": [
                    "--steps"
                ],
                "info": "Give the main steps to create an application.",
                "required": false,
                "show": true
            }
        },
        {
            "switch_bin": {
                "action": "store_true",
                "args": [
                    "--switch-bin"
                ],
                "info": "Given an application name and a version, then current executable in the path is switched to that version.",
                "nargs": 2,
                "params_required": [
                    "NAME",
                    "VERSION"
                ],
                "required": false,
                "show": true
            }
        }
    ]
}